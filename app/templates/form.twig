{% extends('index.twig') %}

{% block body %}
<div class="starter-template">
    <h1>Rotating Hat</h1>
    <p class="lead">Distribute a recurring task between people</p>
</div>
<div class="row">
    <div class="col-lg-6">
        <form role="form" action="/create-calendar" method="post">
            <div class="form-group form-row">
                <label class="control-label col-sm-4" for="name">Name of the task</label>

                <div class="col-sm-8">
                    {{ form_widget( form.name, { 'attr':{ 'class': 'form-control', 'placeholder': 'Hero of the day' } } ) }}
                    {{ form_errors( form.name ) }}
                </div>
            </div>

            <div class="form-group form-row">
                <label class="control-label col-sm-4" for="people">Names of the people</label>


                <div class="col-sm-8">
                    {{ form_widget( form.people, { 'attr':{ 'class': 'form-control', 'rows': 5 } } ) }}
                    <small class="form-text text-muted">One name per line, at least 2 names</small>
                    {{ form_errors( form.people ) }}
                </div>
            </div>

            <div class="form-group form-row">
                <label class="control-label col-sm-4" for="duration">Duration of the task</label>

                <div class="col-sm-8">
                    {{ form_widget( form.duration, { 'attr':{ 'class': 'form-control' } } ) }}
                    <!-- TODO custom selection -->
                    {{ form_errors( form.duration ) }}
                </div>
            </div>

            <div class="form-group form-row">
                <label class="control-label col-sm-4" for="startOn">Start on</label>


                <div class="col-sm-4">
                    {{ form_widget( form.startOn, { 'attr': {
                        'class': 'form-control',
                        'placeholer': 'YYYY-MM-DD',
                        'data-provide': 'datepicker',
                        'data-date-start-date': "-1y",
                        'data-date-format': "yyyy-mm-dd"
                    } } ) }}
                </div>
                <div class="col-sm-4">
                    {{ form_widget( form.startOnTimezone, { 'attr':{ 'class': 'form-control' }, 'id':'task_timezone' } ) }}
                </div>
                {{ form_errors( form.startOn ) }}
                {{ form_errors( form.startOnTimezone ) }}
            </div>

            <div class="form-group form-row">
                <label class="control-label col-sm-4" for="recurrence">Repeat</label>

                <div class="col-sm-8">
                    {{ form_widget( form.recurrence, { 'attr':{ 'class': 'form-control' } } ) }}
                    {{ form_widget( form.endDate, { 'attr': {
                        'class': 'form-control',
                        'placeholer': 'YYYY-MM-DD',
                        'data-provide': 'datepicker',
                        'data-date-start-date': "-1y",
                        'data-date-format': "yyyy-mm-dd",
                        'style':'display:none'
                    } } ) }}
                    {{ form_errors( form.recurrence ) }}
                    {{ form_errors( form.endDate ) }}
                </div>
            </div>

            <button type="submit" class="btn">Get Calendar file</button>
        </form>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                How to use
            </div>
            <div class="card-body">
                <p class="card-text">
                    Enter the names of the people that will carry out the task after each other, select the duration of the task, select the start time and press "Get Calendar file".
                    This will download a file that you can import into your calendar application, e.g. Google Calendar or Outlook.
                </p>

            </div>
        </div>
    </div>
</div>
{% endblock %}